
<HorseGame>
    canvas.before:
        Color:
            rgba:0,0,0,1
        Rectangle:
            size:1920,1920

<TrackGround>
    canvas.before:
        Color:
            rgba:0,0,0,1
        Rectangle
            size:self.width,120
    canvas.after:
        Color:
            rgba:1,1,1,1

        Line:
            points:[0,0,root.width,0] if root.width else [0,0,0,0]
        Line:
            points:[0,120,root.width,120] if root.width else [0,0,0,0]

<AnimLayout>
<HorseNumber>
    Label:
        text:f"[size=35][b][color=#00000]{self.parent.tn}[/color][/size][/b]"
        pos:(-self.width/2)+75,10
        text_size:300,150
        halign:"center"
        valign:"center"
        markup:True
        outline_width:1
        outline_color:1,1,1,1

<Horse>
    angle:self.angle
    horse_size:self.horse_size
    color:self.color

    canvas.before:
        PushMatrix
        Rotate:
            angle:self.angle
            origin:self.center if self.center else 1,1
        Color:
            #rgba:self.color if self.color else (1,1,1,1)
            rgba:1,1,1,1
        Rectangle:
            size:150,150
            source:"horse_right.png"

    canvas.after:
        PopMatrix




<GoalLine>
    id:goal_line
    points:self.points
    canvas:

        Color:
            rgba:1,1,1,1
        Line:
            points:[0,0,0,0] if self.points is None else [self.points]
            width:4

